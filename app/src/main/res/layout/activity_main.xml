<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.quickdoc.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_marginTop="42dp"
            android:layout_marginStart="32dp"
            android:textColor="@color/explanation_text"
            android:textSize="18sp"
            android:text="@string/select_a_specialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinner_doctor_speciallity"
            android:prompt="@string/choose_an_speciallity_to_search_for"
            style="@style/quickdoc_mainactivity" />

        <Button
            android:id="@+id/button_schedule_appointment"
            android:layout_marginTop="0dp"
            style="@style/quickdoc_mainactivity"
            android:text="@string/schedule_a_doctor_s_appointment" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/button_check_next_appointments"
            style="@style/quickdoc_mainactivity"
            android:text="@string/check_your_next_doctor_s_appoitments" />

        <Button
            android:id="@+id/button_review_doctors"
            style="@style/quickdoc_mainactivity"
            android:text="@string/review_your_last_doctor_s_appointments" />

    </LinearLayout>
</ScrollView>